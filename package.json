{
  "name": "hotel-management-backend-v2",
  "version": "1.0.0",
  "private": true,
  "type": "commonjs",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch -r tsconfig-paths/register src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node -r tsconfig-paths/register dist/server.js",
    "test": "jest --runInBand",
    "db:create": "tsx -r tsconfig-paths/register src/scripts/create-database.ts",
    "db:seed": "tsx -r tsconfig-paths/register src/scripts/seed-database.ts",
    "db:seed:rbac": "tsx -r tsconfig-paths/register src/scripts/seed-rbac.ts",
    "db:reset": "tsx -r tsconfig-paths/register src/scripts/reset-database.ts",
    "db:migrate:auth": "tsx -r tsconfig-paths/register src/scripts/migrate-auth-extras.ts",
    "db:migrate": "tsx -r tsconfig-paths/register src/scripts/migrate.ts",
    "db:migrate:down": "tsx -r tsconfig-paths/register src/scripts/migrate-down.ts",
    "db:migrate:status": "tsx -r tsconfig-paths/register src/scripts/migrate-status.ts"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.14.3",
    "nanoid": "^5.1.5",
    "nodemailer": "^7.0.5",
    "pino": "^9.9.0",
    "pino-http": "^10.5.0",
    "sequelize": "^6.37.7",
    "swagger-ui-express": "^5.0.1",
    "umzug": "^3.8.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.5.1",
    "@types/nodemailer": "^7.0.1",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "jest": "^29.7.0",
    "pino-pretty": "^13.1.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.5",
    "typescript": "^5.5.4"
  }
}
